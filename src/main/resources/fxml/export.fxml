<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="export" prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.umontpellier.controller.FileTransferController">
  <children>
  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
         <children>
          <AnchorPane layoutY="14.0" maxHeight="-1.0" maxWidth="-1.0" prefHeight="290.0" prefWidth="362.0">
               <children>
                  <VBox layoutX="26.0" layoutY="14.0" prefHeight="200.0" prefWidth="310.0" spacing="30.0">
                     <children>
                        <VBox prefHeight="75.0" prefWidth="274.0" spacing="5.0">
                           <children>
                              <Label text="Dossier à sauvegarder">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="folderPathField" editable="false" prefHeight="26.0" prefWidth="166.0" />
                              <Button fx:id="browseButton" mnemonicParsing="false" onAction="#onSelectFolder" prefHeight="26.0" prefWidth="136.0" styleClass="button, button-small" text="Parcourir..." />
                           </children>
                        </VBox>
                        <VBox prefHeight="75.0" prefWidth="274.0" spacing="5.0">
                           <children>
                              <Label text="Filtre (extensions)">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="extensionField" prefHeight="26.0" prefWidth="166.0" promptText="txt,csv,jpg" />
                           </children>
                        </VBox>
                        <Button fx:id="saveButton" mnemonicParsing="false" onAction="#onSave" text="Démarrer la sauvegarde" />
                     </children>
                  </VBox>
               </children>
          </AnchorPane>
         </children>
      </AnchorPane>
  </children>
</VBox>
