<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.umontpellier.controller.SaveManagerController">
  <children>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
         <children>
            <VBox layoutX="30.0" layoutY="36.0" prefHeight="200.0" prefWidth="310.0" spacing="40.0">
               <children>
                  <VBox prefHeight="75.0" prefWidth="274.0" spacing="5.0">
                     <children>
                        <Label text="Dossier à sauvegarder">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <TextField fx:id="folderPath" editable="false" prefHeight="26.0" prefWidth="166.0" />
                        <Button fx:id="browseButton" mnemonicParsing="false" onAction="#onSelectFolder" prefHeight="26.0" prefWidth="136.0" styleClass="button, button-small" text="Parcourir..." />
                     </children>
                  </VBox>
                  <Button fx:id="saveButton" mnemonicParsing="false" onAction="#onSave" text="Démarrer la sauvegarde" />
               </children>
            </VBox>
         </children>
    </AnchorPane>
  </children>
</VBox>
